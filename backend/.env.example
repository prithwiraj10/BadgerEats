# Backend environment variables example
# Copy this file to .env and fill in values before running locally.

# Node environment
NODE_ENV=development

# App port
PORT=4000

# Database: for quick local testing you can use SQLite or Postgres connection string
# Example (sqlite): DATABASE_URL="file:./dev.db"
# Example (postgres): DATABASE_URL="postgresql://user:pass@localhost:5432/badgereats"
DATABASE_URL=

# Creao AI (or replace with OPENAI key if using OpenAI client)
CREAO_API_URL=https://api.creao.ai/v1/generate
CREAO_API_KEY=

# Twilio credentials
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM=

# Default city used in some UX flows
DEFAULT_CITY=Madison

# Optional: frontend origin to restrict CORS (e.g. http://localhost:3000)
FRONTEND_ORIGIN=
DEV_KEY=changeme_dev_key
