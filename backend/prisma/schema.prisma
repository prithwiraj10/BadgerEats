generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(cuid())
  name         String
  phoneE164    String   @unique
  preferences  Json
  subscribed   Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  deliveries   Delivery[]
}

model Alert {
  id         String      @id @default(cuid())
  title      String
  summary    String
  location   String
  startTime  DateTime?
  endTime    DateTime?
  tags       String[]
  source     String
  createdAt  DateTime @default(now())
  deliveries Delivery[]
}

model Delivery {
  id        String   @id @default(cuid())
  alert     Alert    @relation(fields: [alertId], references: [id])
  alertId   String
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  status    DeliveryStatus
  twilioSid String?
  createdAt DateTime @default(now())
}

enum DeliveryStatus {
  SENT
  FAILED
  STOPPED
}
